{% extends 'base.html.twig' %}

{% block title %}Stock index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Stock Index</h1>

        <div class="mb-3">
            <a href="{{ path('app_stock_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create new
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for stock in stocks %}
                        <tr>
                            <td>{{ stock.id }}</td>
                            <td>{{ stock.name }}</td>
                            <td>
                                <a href="{{ path('app_stock_show', {'id': stock.id}) }}" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i> Show
                                </a>
                                <a href="{{ path('app_stock_edit', {'id': stock.id}) }}" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center">No records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}