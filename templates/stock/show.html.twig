{% extends 'base.html.twig' %}

{% block title %}Stock{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Stock Details</h1>

        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ stock.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ stock.name }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3">
            <a href="{{ path('app_stock_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to list
            </a>
            <a href="{{ path('app_stock_edit', {'id': stock.id}) }}" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
        </div>

        {{ include('stock/_delete_form.html.twig') }}
    </div>
{% endblock %}